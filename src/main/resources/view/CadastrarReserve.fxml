<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/20"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.CadastrarReservaController"
      spacing="8" padding="12">

    <Label text="Cadastrar Reserva" style="-fx-font-size: 16px; -fx-font-weight: 600;"/>
    <TextField fx:id="txtCliente" promptText="Nome do Cliente"/>
    <TextField fx:id="txtServico" promptText="Serviço"/>
    <TextField fx:id="txtProfissional" promptText="Profissional"/>
    <TextField fx:id="txtData" promptText="Data (ex: 12/11/2025)"/>
    <TextField fx:id="txtHorario" promptText="Horário (ex: 14:00)"/>

    <HBox spacing="8">
        <Button fx:id="btnSalvar" text="Salvar" styleClass="button-primary"/>
        <Button fx:id="btnCancelar" text="Cancelar" styleClass="button-secondary"/>
    </HBox>
</VBox>