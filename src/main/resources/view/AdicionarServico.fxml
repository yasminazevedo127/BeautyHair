<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="12" alignment="CENTER" xmlns="http://javafx.com/javafx/21"
	  prefWidth="300"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="control.AdicionarServicoController"
      styleClass="root" stylesheets="@style.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Adicionar Serviço" styleClass="form-label"/>

    <TextField fx:id="txtNome" promptText="Nome do serviço" prefWidth="250" styleClass="form-field"/>

    <HBox spacing="10">
        <Button text="Salvar" onAction="#salvar" styleClass="button-primary"/>
        <Button text="Cancelar" onAction="#cancelar" styleClass="button-secondary"/>
    </HBox>

</VBox>