<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="control.EditarReservaController"
      spacing="12" stylesheets="@style.css" styleClass="root" prefWidth="420">


    <VBox spacing="10">
        <padding>
            <Insets top="16" right="16" bottom="16" left="16"/>
        </padding>

        <Label text="Nome do Cliente" styleClass="form-label"/>
        <TextField fx:id="txtCliente" styleClass="form-field"/>

        <Label text="Serviço" styleClass="form-label"/>
		<ComboBox fx:id="comboServico"
                  promptText="Selecione um serviço"
          		  maxWidth="Infinity"
          		  prefHeight="32"
          		  styleClass="form-field"/>
          		  
        <Label text="Profissional"/>
            <ComboBox fx:id="comboProfissional" 
            		  promptText="Selecione um profissional"
            		  maxWidth="Infinity"
          		  	  prefHeight="32"
          		  	  styleClass="form-field"/>
		
		<Label text="Data" styleClass="form-label"/>
		<DatePicker fx:id="dateData" promptText="Data" styleClass="form-field"/>

		<Label text="Horário" styleClass="form-label"/>
    	<ComboBox fx:id="comboHorario" 
    			  promptText="Selecione um horário" 
    			  maxWidth="Infinity"
                  prefHeight="32"
                  styleClass="form-field"/>

		<Label text="Status" styleClass="form-label"/>
        <ComboBox fx:id="comboStatus"
                  promptText="Selecione o status"
                  maxWidth="Infinity"
                  prefHeight="32"
                  styleClass="form-field"/>
                  
        <HBox spacing="12" alignment="CENTER_RIGHT" styleClass="button-bar">
            <padding>
                <Insets top="10" right="0" bottom="0" left="0"/>
            </padding>

            <Button fx:id="btnCancelar" text="Cancelar" 
                    styleClass="button-secondary" onAction="#onCancelar"/>

            <Button fx:id="btnSalvar" text="Salvar" 
                    styleClass="button-primary" onAction="#onSalvar"/>
        </HBox>
    </VBox>
</VBox>