<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="control.ProfissionaisController"
            styleClass="root" stylesheets="@style.css">

    <top>
        <HBox styleClass="top-controls-bar">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            
            <Label text="Profissionais" styleClass="title-small"/> 
            
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnAdicionar" text="+ Adicionar" styleClass="button-primary"/>
        </HBox>
    </top>

    <center>
        <VBox styleClass="content-container"> 
            <ListView fx:id="listaProfissionais" prefHeight="400"/>
        </VBox>
    </center>

</BorderPane>